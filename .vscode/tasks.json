  Part of Kosmud

  Tasks definition for vs code.
*/

{
  "version": "2.0.0",
  "tasks":
  [
    {
      "label": "Client Build",
      "command": "node",
      "type": "process",
      "presentation" : { "panel": "shared" },
      "isBackground": true,
      "args":
      [
        "./node_modules/typescript/lib/tsc.js",
        "--watch",
        "--project", "./Src/Client"
      ],
      "problemMatcher": [ "$tsc" ]
    },
    {
      "label": "Server Build",
      "command": "node",
      "type": "process",
      "presentation" : { "panel": "shared" },
      "isBackground": true,
      "args":
      [
        "./node_modules/typescript/lib/tsc.js",
        "--watch",
        "--project", "./Src/Server"
      ],
      "problemMatcher": [ "$tsc" ]
    },
    {
      "label": "Build",
      "dependsOn": ["Client Build", "Server Build"],
      "group":
      {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}


